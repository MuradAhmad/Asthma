<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dashboard">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/scrollView"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/transparent_white_rect"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"


            >



            <TextView
                android:id="@+id/txtmeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Medication"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50px"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/edtmedicationDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Opening medication of asthma"
                android:background="@drawable/round_white_bg"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"

                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:gravity="center"

                android:layout_marginBottom="10dp"
                />


            <EditText
                android:id="@+id/edtdrugs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Therapeutic drugs of asthma"
                android:inputType="textMultiLine"
                android:background="@drawable/round_white_bg"

                android:maxLines="10"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:gravity="center"

                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical" />




            <EditText
                android:id="@+id/edtotherMedication"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Other medication"
                android:inputType="textMultiLine"
                android:background="@drawable/round_white_bg"

                android:maxLines="10"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:gravity="center"

                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/edtnewDrugs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Changes in medication new dose"
                android:inputType="textMultiLine"
                android:background="@drawable/round_white_bg"

                android:maxLines="10"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:gravity="center"

                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/edtvisits"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Doctor visits due to asthma"
                android:background="@drawable/round_white_bg"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:maxLines="1"
                android:inputType="number"

                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:paddingStart="2dp"
                android:paddingLeft="2dp"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:id="@+id/edtotherVisits"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Doctor visits due to allergy"
                android:maxLines="1"
                android:inputType="number"
                android:background="@drawable/round_white_bg"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:textSize="14sp"
                android:gravity="center"

                android:paddingStart="2dp"
                android:paddingLeft="2dp"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:id="@+id/edtotherConsideration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Other considerations"
                android:background="@drawable/round_white_bg"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:textSize="14sp"
                android:gravity="center"

                android:paddingStart="2dp"
                android:paddingLeft="2dp"
                android:layout_marginBottom="10dp"

                />



            <Button
                android:id="@+id/btnSave"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button"
                android:text="Save"
                android:textColor="@color/colorWhite"
                android:textStyle="normal"


                />



        </LinearLayout>


    </ScrollView>




</RelativeLayout>